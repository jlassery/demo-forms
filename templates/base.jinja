<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Demo Forms</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap-theme.min.css">
    </head>
    <body>
        <div class="container-fluid" style="max-width:1500px;">
            {% block content %}
            {% endblock %}
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
        <script type="text/javascript">
          $(document).ready(function(){
            $('#valor').mask("#.##0,00", {reverse: true});
            $('#volOpMes').mask("#.##0,00", {reverse: true});
          })

          function exibeCampo(tipoMercadoria){
            if(tipoMercadoria === "Outros"){
              $('#divOutros').show();
            }else{
              $('#outros').val("");
              $('#divOutros').hide();
            }
          }

          function atualizaOpcoes(tipoOperacao){
            if(tipoOperacao === "Operação padrão"){
              $('#op1').show();
              $('#op2').hide();
              $('#op3').hide();
            }
            if(tipoOperacao === "Operação carga seca"){
              $('#op1').hide();
              $('#op2').show();
              $('#op3').show();
            }
          }
          function limpaCampos(){
            $('#formulario').trigger("reset");
          }
        </script>
    </body>
</html>
